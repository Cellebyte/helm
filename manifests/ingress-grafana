{
   "apiVersion": "networking.k8s.io/v1beta1",
   "kind": "Ingress",
   "metadata": {
      "name": "grafana",
      "namespace": "monitoring-system"
   },
   "spec": {
      "rules": [
         {
            "host": "grafana.k8s.cluster.local",
            "http": {
               "paths": [
                  {
                     "backend": {
                        "serviceName": "grafana",
                        "servicePort": "http"
                     }
                  }
               ]
            }
         }
      ]
   }
}
